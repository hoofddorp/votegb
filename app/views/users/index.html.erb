<h1 style = "color:#FFFFFF">Users</h1>
<ul class="users">
  <% @users.each do |user| %>
    <li>
      <strong><%= link_to user.name, user, :style => "color:#FFFFFF" %></strong> signed up <%= user.created_at.to_date %></br>
      <% if admin_signed_in? %>
      <%= link_to 'Edit', edit_user_registration_path, :style => "color:#FFFFFF"%>
      <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, :style => "color:#FFFFFF" %>
      </br>
      <% elsif user_signed_in? %>
        <% if user == current_user %>
      <%= link_to 'Edit', edit_user_registration_path%>
      </br>
        <% end %>
      <% end %>
      </br>
    </li>
  <% end %>

</ul>
